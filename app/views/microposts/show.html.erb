<% provide(:title, @micropost.title) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <% if @user.avatar? %>
                <%= link_to image_tag(@user.avatar.url, size: 120), @user %>
                <% else %>
                <%= gravatar_for @user %>
                <% end %>
                <%= @user.name %>
            </h1>
        </section>
        
    </aside>
    <div class="col-md-8">
       
        <% if @micropost.user.avatar? %>
        <%= link_to image_tag(@micropost.user.avatar.url), @micropost.user %>
        <% else %>
        <%= link_to gravatar_for(@micropost.user, size: 50), @micropost.user %> 
        <% end %>

        <span class="title"> <%= @micropost.title%></span>
        <span class="content">
            <%= @micropost.content %>
            
        </span>
        <span class="user"><%= link_to @micropost.user.name, @micropost.user %></span>        
        <span class="timestamp">
            Posted <%= time_ago_in_words(@micropost.created_at) %> ago       
            <span class="topic"><%= @micropost.topic %></span>
            <span class="view"> <%= @micropost.view %></span>
             <%= link_to "delete", @micropost, method: :delete, data: { confirm: "You sure?"} %>  
        </span>
        <div>
            <%= render partial: "comments/comments", locals: {commentable: @micropospt} %>
            <%= render partial: "comments/form", locals: {commentable: @micropost} %>
        </div>
        
    </div>
   
</div>