<% provide(:title, "Comments to User") %>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-4 ">
            <img style="margin: 60px;"><%= gravatar_for current_user %> </img>
            <p style="margin-left: 150px; margin-top: 25px;"><%= current_user.name %></p>
            <div class="row">
                <p style="margin-left:30px;"> Joined at: <%= current_user.created_at %></p>
                <p class="ml-5 mb-4"><i class="fa fa-map-marker"></i> Melbourne</p>
                <!-- <section class="stats">
 <%= render 'shared/stats' %>
 </section> -->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h6>Comments to me</h6>
                </div>
                <div class="card-body">
                    <% if @comments_to_user.any? %>
                    <% @comments_to_user.each do |comment| %>
                    <p class="card-text">
                        <%= link_to gravatar_for(User.find(comment.user_id), size: 50), User.find(comment.user_id) %>

                        <%= User.find(comment.user_id).name %> :
                        <%= comment.body %>
                        <br>
                        <span><%= comment.created_at %></span>
                    </p>
                    <% end %>
                    <% else %>
                    <p class="card-text">There is no comments from <%= current_user.name %></p>
                    <% end %>

                </div>
            </div>
        </div>
    </div>
</div>