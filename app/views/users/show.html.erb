<% provide(:title, @user.name) %>
<div>
    <div class="col-md-12", style="margin-top: 50px;">
    <!-- <%= gravatar_for @user%>  -->
      <div class="row text-center">
        <% if current_user.avatar? %>
          <%= image_tag(current_user.avatar.url, size: 150, class:"rounded mx-auto d-block") %>
        <% else %>
          <%= gravatar_for(current_user, size: 150)%>
        <% end %>
      </p>
      </div>
        <p class="text-center">Name: <%= @user.name %></p>
        <p class="text-muted text-center"><i class="glyphicon glyphicon-time"></i>  <%= current_user.created_at.strftime("%Y-%m-%d")%>
        <% if @user.city? %>
          <span style="margin-right: 40px;"></span><i class="glyphicon glyphicon-map-marker"></i>  <%= @user.city? %></p>
        <% end %>
    </div>
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h6>My Posts</h6>
        </div>
        <div class="panel-body">
          <% if @microposts.any? %>
          <% @microposts.each do |post| %>
            <div>
              <p class="panel-text"><%= link_to post.title, post %></p>
              <p style="float: right;"><small class="text-muted"><%= post.created_at %></small></p>
            </div>
            <br>
            <hr/>
          <% end %>
          <% else %>
          <p class="panel-text">User has no posts</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h6>My Comments</h6>
        </div>
        <div class="panel-body">
          <% if @comments.any? %>
          <% @comments.each do |comment| %>
          <div>
            <p class="panel-text">
              <%= comment.body %> <span style="float:right;">in Post: <%= link_to Micropost.find(comment.micropost_id).title, Micropost.find(comment.micropost_id) %> 
              by <%= link_to User.find(Micropost.find(comment.micropost_id).user_id).name, User.find(Micropost.find(comment.micropost_id).user_id) %></span>
            </p>
            <p style="float: right;"><small class="text-muted">Written at: <%= comment.created_at %></small></p>
            <br/><hr/>
          </div>
          <% end %>

          <% else %>
          <p class="panel-text">User has no comments</p>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
</div>