<% provide(:title, @user.name) %>
<div>
  <%= render 'users/user_info' %>
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h6>My Posts</h6>
        </div>
        <div class="panel-body">
          <% if @microposts.any? %>
          <% @microposts.each do |post| %>
            <div>
              <p class="panel-text"><%= link_to post.title, post %></p>
              <p style="float: right;"><small class="text-muted"><%= post.created_at %></small></p>
            </div>
            <br>
            <hr/>
          <% end %>
          <% else %>
          <p class="panel-text">User has no posts</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h6>My Comments</h6>
        </div>
        <div class="panel-body">
          <% if @comments.any? %>
          <% @comments.each do |comment| %>
          <div>
            <p class="panel-text">
              <p><%= raw comment.body %></p>
              <span style="float:right;">in Post: <%= link_to Micropost.find(comment.micropost_id).title, Micropost.find(comment.micropost_id) %> 
              by <%= link_to User.find(Micropost.find(comment.micropost_id).user_id).name, User.find(Micropost.find(comment.micropost_id).user_id) %></span>
            </p>
            <br/>
            <p style="float: right;"><small class="text-muted">Written at: <%= comment.created_at %></small></p>
            <br/><hr/>
          </div>
          <% end %>

          <% else %>
          <p class="panel-text">User has no comments</p>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
</div>